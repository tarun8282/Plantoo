<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>


<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ManageRoomsController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;"
      stylesheets="@managerooms.css">

    <Label text="Room List" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Select Hotel:"/>
        <ComboBox fx:id="hotelCombo" prefWidth="200"/>
        <Button text="Add Room" fx:id="btnAddRoom"/>
        <Button text="Edit Room" fx:id="btnEditRoom"/>
        <Button text="Delete Room" fx:id="btnDeleteRoom"/>
        <Button text="Refresh" fx:id="btnRefresh"/>
    </HBox>

    <TableView fx:id="roomTable" prefWidth="700">
        <columns>
            <TableColumn text="S.No" fx:id="colSerial" prefWidth="50"/>
            <TableColumn text="Hotel ID" fx:id="colHotelId" prefWidth="80"/>
            <TableColumn text="Hotel" fx:id="colHotel" prefWidth="150"/>
            <TableColumn text="Room Number" fx:id="colRoomNum" prefWidth="100"/>
            <TableColumn text="Room Type" fx:id="colRoomType" prefWidth="150"/>
            <TableColumn text="Rent" fx:id="colRent" prefWidth="100"/>
            <TableColumn text="Status" fx:id="colStatus" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
