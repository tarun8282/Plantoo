<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminDashboardController"
            prefWidth="800" prefHeight="600">

    <!-- Top Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #2575fc; -fx-padding: 15;">
            <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #ff4d4d; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Left Menu -->
    <left>
    <VBox fx:id="leftMenuContainer" spacing="15" style="-fx-background-color: #f0f2f5; -fx-padding: 20;" prefWidth="200">
        <!-- Main menu buttons -->
        <Button text="Manage Hotels" onAction="#openManageHotels" prefWidth="160"/>
        <Button text="Manage Rooms" onAction="#openManageRooms" prefWidth="160"/>
        <Button text="Manage Staff" onAction="#openManageStaff" prefWidth="160"/>
    </VBox>
    </left>


    <!-- Center Content -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ffffff; -fx-padding: 20;">
            <Label text="Welcome, Admin!" style="-fx-font-size: 20px; -fx-text-fill: #333333;"/>
        </StackPane>
    </center>

</BorderPane>
